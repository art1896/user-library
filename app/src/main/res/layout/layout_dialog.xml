<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/activity_dialog__imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/profile" />


    <TextView
        android:id="@+id/activity_dialog__nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dialog__imageView"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/activity_dialog__lastNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dialog__nameTextView"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Last Name"
        android:textAlignment="center"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/activity_dialog__phoneTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dialog__lastNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:autoLink="phone"
        android:text="Phone"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/activity_dialog__mailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dialog__phoneTextView"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Email"
        android:textAlignment="center"
        android:textSize="25sp" />

</RelativeLayout>