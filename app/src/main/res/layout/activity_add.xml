<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_add__imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/activity_add__addPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add photo"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_add__imageView"/>

    <EditText
        android:id="@+id/activity_add__nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_add__addPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:hint="Name"
        android:inputType="textPersonName|textCapSentences" />

    <EditText
        android:id="@+id/activity_add__lastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_add__nameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:hint="Last Name"
        android:inputType="textPersonName|textCapSentences" />


    <EditText
        android:id="@+id/activity_add__phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_add__lastNameEditText"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:hint="Phone"
        android:inputType="number|phone" />

    <EditText
        android:id="@+id/activity_add__mailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_add__phoneEditText"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <RadioGroup
        android:id="@+id/activity_add__radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_add__mailEditText"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/activity_add__maleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/activity_add__famaleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Famale" />
    </RadioGroup>

    <ImageButton
        android:id="@+id/activity_add__removeImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/ic_remove_circle_black_24dp" />

    <ImageButton
        android:id="@+id/activity_add__addImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/ic_add_circle_black_24dp" />


</RelativeLayout>